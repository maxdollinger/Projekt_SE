packages: 
  yum:
    mariadb-devel: []

option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: correction_management_system.wsgi:application
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: static

container_commands:
  01_migrate:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && python /var/app/current/manage.py migrate --noinput"
  02_superuser:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && python /var/app/current/manage.py createsu"
  03_collectstatics:
    command: "source /var/app/venv/staging-LQM1lest/bin/activate && python /var/app/current/manage.py collectstatic --noinput"